@model MaleFashion.eCommerce.WebUI.Models.Entity.ProductMainCollection

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Delete</h1>

<h3 class="text-center">Are you sure you want to delete this?</h3>
<div>
    <h4 class="text-center">Product Main Collection</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Category:
        </dt>
        <dd class="col-sm-10">
            <b> @Model.Category.Name</b>
        </dd>
        <dt class="col-sm-2">
            Product:
        </dt>
        <dd class="col-sm-10">
            <b> @Model.Product.Title</b>
        </dd>
        <dt class="col-sm-2">
            Color:
        </dt>
        <dd class="col-sm-10">
            <b>@Model.Color.ColorName</b>
        </dd>
        <dt class="col-sm-2">
            Product Tag:
        </dt>
        <dd class="col-sm-10">
            <b> @Model.ProductTag.ProductTagName</b>
        </dd>
        <dt class="col-sm-2">
            Size:
        </dt>
        <dd class="col-sm-10">
            <b> @Model.Size.SizeName</b>
        </dd>
        <dt class="col-sm-2">
            Price:
        </dt>
        <dd class="col-sm-10">
            <b> @Model.Price</b>
        </dd>
    </dl>

    <form asp-action="Delete" class="mb-5">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-danger">Back to List</a>
    </form>
</div>
