@model MaleFashion.eCommerce.WebUI.Models.Entity.ProductMainCollection

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">Details</h1>

<div>
    <h4 class="text-center">Product Main Collection</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Category:
        </dt>
        <dd class="col-sm-10">
            <b> @Model.Category.Name</b>
        </dd>
        <dt class="col-sm-2">
            Product:
        </dt>
        <dd class="col-sm-10">
            <b> @Model.Product.Title</b>
        </dd>
        <dt class="col-sm-2">
            Product Image:
        </dt>
        <dd class="col-sm-10">
            <div class="img-div" style="width: 20%;">
                <img src="assets/images/shop/@Model.Product.ProductImages?.FirstOrDefault(pi => pi.IsMain == true)?.ImagePath" style="width: 100%;height: 300px;object-fit: cover;" />
            </div>
        </dd>
        <dt class="col-sm-2">
            Color:
        </dt>
        <dd class="col-sm-10">
            <b>@Model.Color.ColorName</b>
        </dd>
        <dt class="col-sm-2">
            Product Tag:
        </dt>
        <dd class="col-sm-10">
            <b> @Model.ProductTag.ProductTagName</b>
        </dd>
        <dt class="col-sm-2">
            Size:
        </dt>
        <dd class="col-sm-10">
            <b> @Model.Size.SizeName</b>
        </dd>
        <dt class="col-sm-2">
            Price:
        </dt>
        <dd class="col-sm-10">
            <b> @Model.Price</b>
        </dd>
    </dl>
</div>
<div class="mb-5">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-danger">Back to List</a>
</div>
