@model MaleFashion.eCommerce.WebUI.Models.Entity.Team

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Delete</h1>

<h3 class="text-center">Are you sure you want to delete this?</h3>
<div>
    <h4 class="text-center">Team</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImagePath)
        </dt>
        <dd class="col-sm-10">
            <div style="width: 40%;" class="img-div">
                <img style="width: 100%; height: 250px; object-fit: cover;" src="assets/images/about-us/@Model.ImagePath" />
            </div>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TeamJob)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TeamJob.JobName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedDate.ToString("dd.MM.yyyy HH:mm:ss")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedDate)
        </dt>
        <dd class="col-sm-10">
            @Model.UpdatedDate?.ToString("dd.MM.yyyy HH:mm:ss")
        </dd>
    </dl>

    <form asp-action="Delete" class="mb-5 ms-2">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-danger">Back to List</a>
    </form>
</div>
