@model MaleFashion.eCommerce.WebUI.Models.Entity.Blog

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">Details</h1>

<div>
    <h4 class="text-center">Blog</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Model.Description.RemoveTags()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImagePath)
        </dt>
        <dd class="col-sm-10">
            <div style="width: 75%;">
                <img src="assets/images/blog/@Model.ImagePath" style="width:100%;" />
            </div>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorImagePath)
        </dt>
        <dd class="col-sm-10">
            <div style="width: 25%;">
                <img src="admin-assets/img/users/@Model.AuthorImagePath" style="width:100%;" />
            </div>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AuthorName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorSurname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AuthorSurname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Aphorism)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Aphorism.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedDate.ToString("dd.MM.yyyy HH:mm:ss")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedDate)
        </dt>
        <dd class="col-sm-10">
            @Model.UpdatedDate?.ToString("dd.MM.yyyy HH:mm:ss")
        </dd>
    </dl>
</div>
<div class="mb-5">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-danger">Back to List</a>
</div>
