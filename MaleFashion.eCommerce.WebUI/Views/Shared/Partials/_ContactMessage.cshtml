@model ContactAndMessageViewModel;

<div class="contact__form">
    <div asp-validation-summary="ModelOnly"></div>
    <form method="post" asp-action="SendMessage" asp-controller="Contacts" id="contact-form">
        <div class="row">
            <div class="col-lg-6">
                <input type="text" asp-for="@Model.ContactMessage.Name" placeholder="Name" />
                <span asp-validation-for="@Model.ContactMessage.Name"></span>
            </div>
            <div class="col-lg-6">
                <input type="text" asp-for="@Model.ContactMessage.EmailAddres" placeholder="Email" />
                <span asp-validation-for="@Model.ContactMessage.EmailAddres"></span>

            </div>
            <div class="col-lg-12">
                <textarea placeholder="Message" asp-for="@Model.ContactMessage.Content"></textarea>
                <span asp-validation-for="@Model.ContactMessage.Content"></span>
            </div>

            <button type="submit" class="site-btn">Send Message</button>
        </div>
    </form>
</div>