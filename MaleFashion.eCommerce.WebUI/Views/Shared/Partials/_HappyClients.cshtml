@model AboutUsViewModel;

<section class="clients spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <span>Partner</span>
                    <h2>Happy Clients</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (HappyClient item in Model.HappyClients)
            {
                <div class="col-lg-3 col-md-4 col-sm-4 col-6">
                    <a href="#" class="client__item">
                        <img src="assets/images/about-us/@item.ImagePath" alt="" />
                    </a>
                </div>
            }
        </div>
    </div>
</section>