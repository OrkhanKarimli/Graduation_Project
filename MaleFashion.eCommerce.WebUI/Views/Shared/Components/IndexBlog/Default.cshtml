@model IEnumerable<Blog>;

<section class="latest spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <span>Latest News</span>
                    <h2>Fashion New Trends</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (Blog item in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="blog__item">
                        <div class="blog__item__pic set-bg"
                             data-setbg="assets/images/blog/@item.ImagePath"></div>
                        <div class="blog__item__text">
                            <span>
                                @*<img src="assets/images/blog/@item.ImagePath"
                                    alt="" />*@
                                @item.CreatedDate.ToString("dd MMMM yyyy")
                            </span>
                            <h5>@item.Title</h5>
                            <a asp-action="Index" asp-controller="BlogDetails" asp-route-id="@item.Id" asp-route-title="@Url.FriendlyUrlContext(item.Title)">Ətraflı</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>